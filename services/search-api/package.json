{
  "name": "@photographic-memory/search-api",
  "version": "0.1.0",
  "private": true,
  "description": "Search API service: Hybrid retrieval + RAG endpoints",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:search-performance": "tsx src/test/search-performance.ts",
    "test:nugget-extractors": "tsx src/test/nugget-extractors.ts",
    "test:rag": "tsx src/test/rag.ts",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "fastify": "^4.24.3",
    "sqlite3": "^5.1.6",
    "chromadb": "^1.7.3",
    "openai": "^4.24.1",
    "chrono-node": "^2.7.5",
    "lru-cache": "^10.1.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/sqlite3": "^3.1.11",
    "@fastify/cors": "^8.4.1",
    "tsx": "^4.6.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1"
  },
  "keywords": [
    "search",
    "hybrid-retrieval",
